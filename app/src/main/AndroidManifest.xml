<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.transaction">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Transaction">

        <!-- Main launcher activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Add Transaction -->
        <activity
            android:name=".add_trans1.AddTrans1Activity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.Transaction" />

        <!-- Categorization -->
        <activity
            android:name=".add_trans2.CategorizationActivity"
            android:exported="true"
            android:theme="@style/Theme.Transaction" />

        <!-- Graph & History -->
        <activity
            android:name=".graphHistory.GraphActivity"
            android:exported="true"
            android:theme="@style/Theme.Transaction" />

        <!-- View Expenses (Fix added!) -->
        <activity
            android:name=".view_exp.ViewExpenseActivity"
            android:exported="true"
            android:theme="@style/Theme.Transaction" />

        <!-- Salary Input Activities -->
        <activity
            android:name=".salaryInput.SalaryInputActivity"
            android:exported="true"
            android:theme="@style/Theme.Transaction" />

        <activity
            android:name=".salaryInput.SummaryActivity"
            android:exported="true"
            android:theme="@style/Theme.Transaction" />

        <!-- Category -->
        <activity
            android:name=".CategoryActivity"
            android:exported="true"
            android:theme="@style/Theme.Transaction" />

        <!-- Main Menu -->
        <activity
            android:name=".mainMenu.MainMenuActivity"
            android:exported="true"
            android:theme="@style/Theme.Transaction" />

    </application>

</manifest>
